<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" class="hidden" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profile-details flex flex-col items-center my-20">
            <div class="relative">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-100">
                    <i class="text-zinc-700 fa-solid fa-pencil"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/upload/<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-bold "><%= user.name%></h1>
            <h3 class="text-md my-3">@<%= user.username%></h3>
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full">Edit Profile</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-sm font-semibold mt-5">Add New Post</a>
        </div>
        <div class="profile-cards flex flex-wrap gap-10 mx-10 pt-10">
            <% if (user.posts.length > 0) { %>
                <div>
                    <div class="w-52 h-40 bg-zinc-300 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/upload/<%= user.posts[0].image %>" alt="">
                    </div>
                    <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your pins</a>
                    <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5>
                </div>
            <% } else { %>
                <div class="text-center text-xl text-zinc-400">
                    You have no posts yet.
                </div>
            <% } %>
        </div>

         <div class="footbar h-10 w-full hidden justify-between items-center px-10 py-6 mt-3 bg-zinc-700 text-white border-t-2">
                <div class="home">
                    <a href="/feed"><i class="fa-solid fa-house"></i></a>
                </div>
                <div class="search">
                    <a href="/search"><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
                <div class="add">
                    <a href="/add"><i class=" fa-solid fa-plus"></i></a>
                </div>
                <div class="profile-foot">
                    <a href="/profile"><i class="fa-solid fa-user"></i></a>
                </div>
        </div>
          
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click", function(){
            document.querySelector("#uploadform input").click();
        })
        document.querySelector("#uploadform input").addEventListener("change", function(){
            document.querySelector("#uploadform").submit();
        })
    </script>
<% include ./partials/footer.ejs %>