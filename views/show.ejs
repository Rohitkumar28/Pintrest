<% include ./partials/header.ejs %>
   <div class="w-full min-h-screen relative bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(post){%> 
            <div class="card w-32 overflow-hidden">
                <div class=" w-full h-40 bg-sky-300 rounded-lg overflow-hidden">
                    <img src="/images/upload/<%= post.image %>" class="w-full h-full object-cover">
                </div>
                <h5 class="mt-2 text-sm"><%= post.title %></h5>
            </div>
        <% }) %>
    </div>
   </div>
   <div class="footbar h-14 w-full hidden fixed bottom-0 justify-between items-center  px-10 py-6 bg-zinc-700 text-white border-t-2 z-50">
    <div class="home">
        <a href="/feed"><i class="fa-solid fa-house"></i></a>
    </div>
    <div class="search">
        <a href="/profile"><i class="fa-solid fa-magnifying-glass"></i></a>
    </div>
    <div class="add">
        <a href="/add"><i class=" fa-solid fa-plus"></i></a>
    </div>
    <div class="profile-foot">
        <a href="/profile"><i class="fa-solid fa-user"></i></a>
    </div>
</div>
<% include ./partials/footer.ejs %>